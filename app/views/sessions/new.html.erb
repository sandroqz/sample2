<h1>Exemplo de login</h1>
<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>
<form method="POST" action="<%= sessions_path %>">
  <div class="field"><label for="username">User Name</label><input type="text" name="username" id="username" /></div>
  <div class="field"><label for="password">Password</label><input type="password" name="password" id="password" /></div>
  <div class="field"><input type="submit" value="Login" /></div>
</form>
