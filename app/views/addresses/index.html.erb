<h1>Listing addresses for <%= @user.name %></h1>
<table>
  <tr>
    <th>Street</th>
    <th>Complement</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Zip code</th>
    <th>Number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @addresses.each do |address| %>
  <tr>
    <td><%= address.street %></td>
    <td><%= address.complement %></td>
    <td><%= address.city %></td>
    <td><%= address.state %></td>
    <td><%= address.country %></td>
    <td><%= address.zip_code %></td>
    <td><%= address.number %></td>
    <td><%= link_to 'Show', user_address_path(@user, address) %></td>
    <td><%= link_to 'Edit', edit_user_address_path(@user, address) %></td>
    <td><%= link_to 'Destroy', user_address_path(@user, address), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

